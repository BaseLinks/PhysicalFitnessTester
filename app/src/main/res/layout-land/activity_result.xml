<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="record" type="com.kangear.bodycompositionanalyzer.Record"/>
    </data>
<android.support.constraint.ConstraintLayout
    android:id="@+id/result_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/result_first_page"
        layout="@layout/result_first_page"
        android:visibility="gone"
        app:record="@{record}"
        app:bc="@{record.getBodyComposition()}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        android:id="@+id/result_last_page"
        layout="@layout/result_last_page"
        app:record="@{record}"
        app:bc="@{record.getBodyComposition()}"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <include
        layout="@layout/result_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/pdfpicture_view"
        android:layout_width="595dp"
        android:layout_height="842dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="595dp"
            android:layout_height="842dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline134"
            app:layout_constraintTop_toTopOf="@+id/guideline134">

            <include
                android:id="@+id/pdf"
                layout="@layout/pdf_20190104"
                app:layout_constraintBottom_toBottomOf="parent"
                app:record="@{record}"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/guideline134"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".5" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
</layout>
