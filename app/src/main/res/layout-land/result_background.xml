<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- 中间黑块 -->

    <View
        android:id="@+id/view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="76px"
        android:background="#EA961C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="测试结果"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/back_button"
        android:layout_width="162dp"
        android:layout_height="106dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/_90_back"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="@+id/print_button"
        app:layout_constraintEnd_toStartOf="@+id/constraintLayout6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/print_button" />

    <Button
        android:id="@+id/print_button"
        android:layout_width="277dp"
        android:layout_height="106dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/_50_kb_print"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/qr_button"
        android:layout_width="277dp"
        android:layout_height="106dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/_50_kb_qr"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="@+id/print_button"
        app:layout_constraintEnd_toStartOf="@+id/print_button"
        app:layout_constraintTop_toTopOf="@+id/print_button" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="162dp"
        android:layout_height="106dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintBottom_toBottomOf="@+id/qr_button"
        app:layout_constraintEnd_toStartOf="@+id/qr_button"
        app:layout_constraintTop_toTopOf="@+id/qr_button">

        <Button
            android:id="@+id/previous_page_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/_90_prev_page"
            android:onClick="onClick"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="415dp" />

        <Button
            android:id="@+id/next_page_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/_90_next_page"
            android:onClick="onClick"
            tools:layout_editor_absoluteX="318dp"
            tools:layout_editor_absoluteY="603dp" />
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
