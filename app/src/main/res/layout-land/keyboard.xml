<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/kb_1_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="31dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:padding="0dp"
        android:text="1"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/kb_6_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/kb_2_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="2"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_1_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_3_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="3"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_2_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_4_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="4"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_3_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_5_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="5"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_4_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_6_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="6"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/kb_1_button"
        app:layout_constraintTop_toBottomOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_7_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="7"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_6_button"
        app:layout_constraintTop_toTopOf="@+id/kb_6_button" />

    <Button
        android:id="@+id/kb_8_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="8"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_7_button"
        app:layout_constraintTop_toTopOf="@+id/kb_6_button" />

    <Button
        android:id="@+id/kb_9_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="9"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_8_button"
        app:layout_constraintTop_toTopOf="@+id/kb_6_button" />

    <Button
        android:id="@+id/kb_0_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="0"
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_9_button"
        app:layout_constraintTop_toTopOf="@+id/kb_6_button" />

    <Button
        android:id="@+id/kb_back_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb_back"
        android:onClick="onClick"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/kb_5_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_dot_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb"
        android:onClick="onClick"
        android:text="."
        android:textSize="79sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/kb_back_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_softboard_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb_keyboard"
        android:onClick="onClick"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/kb_back_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_delete_button"
        android:layout_width="113dp"
        android:layout_height="112dp"
        android:background="@drawable/_50_kb_delete"
        android:onClick="onClick"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="@+id/kb_next_button"
        app:layout_constraintTop_toTopOf="@+id/kb_1_button" />

    <Button
        android:id="@+id/kb_next_button"
        android:layout_width="350dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/_50_kb_next"
        android:onClick="onClick"
        android:textSize="70sp"
        app:layout_constraintStart_toEndOf="@+id/kb_0_button"
        app:layout_constraintTop_toTopOf="@+id/kb_6_button" />

</android.support.constraint.ConstraintLayout>
