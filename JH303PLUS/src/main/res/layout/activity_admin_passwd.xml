<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kangear.bodycompositionanalyzer.WelcomeActivity">

    <include
        layout="@layout/com2_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/read_xishu_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40px"
        android:layout_marginTop="29px"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="系统设置 "
        android:textColor="#F39801"
        android:textSize="50px"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/jiaozhuntizhong_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="22dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="请输入密码"
        android:textColor="#A0A0A0"
        android:textSize="25px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_xishu_textview" />

    <com.kangear.bodycompositionanalyzer.NoImeEditText
        android:id="@+id/tizhibi_edittext"
        android:layout_width="433dp"
        android:layout_height="157dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:gravity="end|bottom"
        android:includeFontPadding="false"
        android:inputType="numberPassword"
        android:lineSpacingExtra="0dp"
        android:maxLength="4"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="25"
        android:textColor="#F39801"
        android:textSize="100sp"
        app:layout_constraintBottom_toBottomOf="@+id/top_edittext"
        app:layout_constraintEnd_toEndOf="@+id/top_edittext"
        app:layout_constraintStart_toStartOf="@+id/top_edittext"
        app:layout_constraintTop_toTopOf="@+id/top_edittext" />

    <com.kangear.bodycompositionanalyzer.NoImeEditText
        android:id="@+id/top_edittext"
        android:layout_width="437dp"
        android:layout_height="147dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="180dp"
        android:background="@null"
        android:gravity="end|bottom"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:maxLines="1"
        android:padding="0dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="_ _ _ _"
        android:textAlignment="center"
        android:textColor="#F39801"
        android:textSize="100sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/age_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="20dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:text="岁"
        android:textColor="#F39801"
        android:textSize="55sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tizhibi_edittext"
        app:layout_constraintStart_toEndOf="@+id/tizhibi_edittext" />
</android.support.constraint.ConstraintLayout>
