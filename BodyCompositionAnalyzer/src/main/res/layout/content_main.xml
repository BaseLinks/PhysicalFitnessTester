<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.tony.bodycompositionanalyzer.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/parse_helloworld_button"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解析样例"
        android:layout_margin="10dp"
        android:layout_below="@+id/serial_linearlayout"
        android:layout_alignParentStart="true" />

    <Button
        android:visibility="gone"
        android:layout_below="@id/parse_helloworld_button"
        android:id="@+id/parse_button"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="解析数据，生成PDF并打开" />

    <Button
        android:visibility="gone"
        android:layout_below="@id/parse_button"
        android:layout_margin="10dp"
        android:id="@+id/print_button"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="串口交互测试" />


    <Button
        android:visibility="gone"
        android:layout_below="@id/print_button"
        android:layout_margin="10dp"
        android:id="@+id/get_printer_button"
        android:onClick="onClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取打印机信息" />

    <CheckBox
        android:id="@+id/draw_negative_checkbox"
        android:layout_margin="10dp"
        android:text="画底版"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false" />

    <CheckBox
        android:id="@+id/dont_print_checkbox"
        android:layout_below="@id/draw_negative_checkbox"
        android:layout_margin="10dp"
        android:text="不打印"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false" />

    <LinearLayout
        android:id="@+id/printer_linearlayout"
        android:layout_below="@id/dont_print_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:text="打印机:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/printer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/serial_linearlayout"
        android:layout_below="@id/printer_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:text="串口:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/serial_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:text="版本说明：0.6添加FE，打印总分"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parse_helloworld_button"
        android:layout_marginTop="28dp"
        android:id="@+id/des_textview" />

</RelativeLayout>
